   "source": [
    "# number bit representation\n",
    "def num_bit(n:int):\n",
    "    n_bit=[]\n",
    "    while (n>0):\n",
    "        if (n%2!=0):\n",
    "            n_bit.append(\"1\")\n",
    "        else:\n",
    "            n_bit.append(\"0\")\n",
    "        n=n//2\n",
    "    temp=n_bit[::-1]\n",
    "    bits=''.join(temp)\n",
    "    return bits\n"
   ]
  },
